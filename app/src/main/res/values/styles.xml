<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Img" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:contentDescription">@string/image_text</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Icon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="IconText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/machaGreen</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
